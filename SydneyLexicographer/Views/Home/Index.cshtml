<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript">
        SL = {};
        SL.questionApiUrl = '@Url.Content("~/api/Question")';
    </script>
    <script type="text/javascript" src="~/Scripts/App.js"></script>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script type="text/javascript" src="~/Scripts/GoogleMaps.js"></script>
    <script type="text/javascript" src="~/Scripts/UI.js"></script>
    <link rel="stylesheet" href="~/Content/App.css">
    <link href='http://fonts.googleapis.com/css?family=Milonga' rel='stylesheet' type='text/css'>
</head>
<body>
    <div id="header">
        <h1>~ Sydney Lexicographer ~</h1>
    </div>

    <div id="question">
        <div class="question-header">
            <div class="question-header-question">Question <span id="question-number">4</span></div>
            <div class="question-header-score">Score: <span id="score">18</span>/<span id="score-out-of">30</span></div>
        </div>

        <div class="question-name">
            Court house
        </div>

        <div class="question-photo">
            <img id="photo" src="http://dictionaryofsydney.org/files/wide/b16fbbf6b053225659d148b51ec14b12b93ba88e">
        </div>

        <div class="question-right">
            <div class="map">
                Where was this photo taken?
                <div class="map-canvas-container">
                    <div id="map-canvas"></div>
                </div>
                <div id="map-score"></div>
            </div>
            <div class="timeline">
                When was this photo taken?
                <div id="yearSlider"></div>
                <input type="text" id="date" style="border: 0; color: red; font-weight: bold; font-family:veranda; font-size:20px;" />
                <div id="timeline-score"></div>
            </div>
        </div>

        <div class="question-footer">
            <button id="submitButton">Answer</button>
            <button id="nextQuestionButton">Next Question</button>
            <div id="description"></div>
        </div>
    </div>

    <div id="results">
        <div>Final score: <span id="final-score">72</span>%</div>
    </div>
</body>
</html>
